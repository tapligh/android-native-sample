<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/margin8"
    app:cardCornerRadius="@dimen/card_corner_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tapligh.sdk.nativead.TaplighNativeAdView
        android:id="@+id/native_ad_root"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:background="#f1f1f1"
        android:layoutDirection="ltr">


        <ImageView
            android:layout_marginEnd="@dimen/margin4"
            android:id="@+id/native_ad_icon"
            android:layout_width="@dimen/image_size_normal"
            android:layout_height="@dimen/image_size_normal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Ad Icon"
            tools:src="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin16"
            android:layout_toStartOf="@id/native_ad_icon"
            android:orientation="vertical">


            <TextView
                style="@style/title_native_ad"
                android:id="@+id/native_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin8"/>

            <TextView
                android:id="@+id/native_ad_desc"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginEnd="@dimen/margin8"
                android:layout_marginBottom="@dimen/margin16"
                style="@style/description_native_ad"/>

        </LinearLayout>


    </com.tapligh.sdk.nativead.TaplighNativeAdView>

</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<com.tapligh.sdk.nativead.TaplighNativeAdView
    android:id="@+id/native_ad_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layoutDirection="ltr"
    android:background="@drawable/bg_round_white"
    android:layout_marginEnd="@dimen/margin16"
    android:layout_marginStart="@dimen/margin16"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/margin4"
            android:id="@+id/cd_icon"
            app:cardCornerRadius="@dimen/card_corner_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/native_ad_icon"
                android:layout_width="@dimen/image_size_normal"
                android:layout_height="@dimen/image_size_normal"
                android:contentDescription="Icon"
                tools:src="@color/colorAccent"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/native_ad_title"
            style="@style/title_native_ad"
            android:layout_alignTop="@+id/native_ad_icon"
            android:layout_marginEnd="@dimen/margin8"
            android:layout_marginRight="@dimen/margin8"
            android:layout_toStartOf="@+id/cd_icon"
            android:layout_toLeftOf="@+id/cd_icon"/>


        <Button
            android:layout_marginTop="@dimen/margin2"
            android:layout_height="36dp"
            android:layout_width="94dp"
            android:id="@+id/native_ad_action_button"
            style="@style/small_action_button"
            android:layout_alignBottom="@+id/cd_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin8"
            android:layout_marginBottom="@dimen/margin8"
            android:background="@drawable/bg_button_round"/>

    </com.tapligh.sdk.nativead.TaplighNativeAdView>
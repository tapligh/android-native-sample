<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tapligh.sdk.nativead.TaplighNativeAdView
        android:id="@+id/native_ad_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/native_ad_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin8"
            android:adjustViewBounds="true"
            android:contentDescription="Banner"
            android:scaleType="centerCrop"
            tools:layout_height="@dimen/banner_height"
            tools:src="@color/colorAccentLight"/>

        <TextView
            android:id="@+id/native_ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/native_ad_desc"
            android:layout_alignEnd="@+id/native_ad_desc"
            android:layout_alignRight="@+id/native_ad_desc"
            android:fontFamily="@font/shabnam_family"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            tools:text="عنوان نمایشی تبلیغ"/>

        <TextView
            android:id="@+id/native_ad_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/native_ad_banner"
            android:layout_alignRight="@+id/native_ad_banner"
            android:layout_alignBottom="@+id/native_ad_banner"
            android:layout_marginEnd="@dimen/margin8"
            android:layout_marginRight="@dimen/margin8"
            android:layout_marginBottom="@dimen/margin8"
            android:fontFamily="@font/shabnam_family"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            tools:text="تضیحات نمایشی تبلیغ"/>


        <Button
            android:layout_marginRight="@dimen/margin16"
            android:layout_marginLeft="@dimen/margin16"
            android:id="@+id/native_ad_action_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_small_height"
            android:layout_below="@+id/native_ad_banner"
            android:fontFamily="@font/shabnam_family"
            android:text="اکشن تبلیغ"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="normal"/>

    </com.tapligh.sdk.nativead.TaplighNativeAdView>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin8"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <com.tapligh.sdk.nativead.TaplighNativeAdView
        android:id="@+id/native_ad_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            style="@style/title_native_ad"
            android:id="@+id/native_ad_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <TextView
            style="@style/description_native_ad"
            android:id="@+id/native_ad_desc"
            android:layout_below="@+id/native_ad_title"
            android:layout_alignParentEnd="true"/>


        <ImageView
            android:id="@+id/native_ad_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/native_ad_desc"
            android:adjustViewBounds="true"
            android:contentDescription="Banner"
            android:scaleType="centerCrop"
            tools:layout_height="@dimen/banner_height"
            tools:src="@color/colorAccentLight"/>

        <ImageView
            android:id="@+id/native_ad_icon"
            android:layout_width="@dimen/image_size_small"
            android:layout_height="@dimen/image_size_small"
            android:layout_below="@+id/native_ad_banner"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin8"
            android:contentDescription="Icon"
            tools:src="@color/colorAccent"/>


        <Button
            style="@style/small_action_button"
            android:id="@+id/native_ad_action_button"
            android:layout_below="@+id/native_ad_banner"
            android:layout_marginStart="@dimen/margin8"/>

    </com.tapligh.sdk.nativead.TaplighNativeAdView>
    
</android.support.v7.widget.CardView>
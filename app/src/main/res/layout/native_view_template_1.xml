<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin8"
    android:layoutDirection="ltr"
    app:cardUseCompatPadding="true">

    <com.tapligh.sdk.nativead.TaplighNativeAdView
        android:id="@+id/native_ad_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:layout_margin="@dimen/margin8"
            android:id="@+id/native_ad_icon"
            android:layout_width="@dimen/image_size_normal"
            android:layout_height="@dimen/image_size_normal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:contentDescription="Ad Icon"
            tools:src="@color/colorAccent"/>

        <TextView
            android:layout_marginRight="@dimen/margin8"
            android:id="@+id/native_ad_title"
            android:layout_alignTop="@+id/native_ad_icon"
            android:layout_alignBottom="@+id/native_ad_icon"
            android:layout_toLeftOf="@+id/native_ad_icon"
            tools:text="عنوان نمایشی تبلیغ"
            style="@style/title_native_ad"/>

        <ImageView
        android:layout_marginTop="@dimen/margin8"
            android:id="@+id/native_ad_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/native_ad_icon"
            android:adjustViewBounds="true"
            android:contentDescription="Banner"
            android:scaleType="centerCrop"
            tools:layout_height="@dimen/banner_height"
            tools:src="@color/colorAccentLight"/>


    </com.tapligh.sdk.nativead.TaplighNativeAdView>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin8"
    android:layout_marginEnd="@dimen/margin16"
    android:layoutDirection="ltr"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">


    <com.tapligh.sdk.nativead.TaplighNativeAdView
        android:id="@+id/native_ad_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/native_ad_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:minHeight="@dimen/min_feature_height"
            android:scaleType="centerCrop"
            tools:src="@color/colorAccentLight"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/shadow_height"
            android:layout_alignBottom="@+id/native_ad_banner"
            android:background="@drawable/bg_item_header"/>


        <TextView
            android:id="@+id/native_ad_title"
            style="@style/title_native_ad"
            android:layout_above="@+id/native_ad_desc"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin8"
            android:textColor="@color/text_color_light"/>

        <TextView
            android:id="@+id/native_ad_desc"
            style="@style/description_native_ad"
            android:layout_alignBottom="@+id/native_ad_banner"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin8"
            android:textColor="@color/text_color_light"/>


    </com.tapligh.sdk.nativead.TaplighNativeAdView>


</android.support.v7.widget.CardView>
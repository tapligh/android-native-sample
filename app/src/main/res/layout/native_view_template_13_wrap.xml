<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="@dimen/margin8"
    android:layoutDirection="ltr"
    app:cardUseCompatPadding="true">

    <com.tapligh.sdk.nativead.TaplighNativeAdView
        android:id="@+id/native_ad_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:visibility="visible">

        <LinearLayout
            android:padding="@dimen/padding2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/native_ad_icon"
                android:layout_width="@dimen/image_size_normal"
                android:layout_height="@dimen/image_size_normal"
                android:layout_margin="@dimen/margin8"
                android:contentDescription="Ad Icon"
                tools:src="@color/colorAccent"/>

            <TextView
                android:id="@+id/native_ad_title"
                style="@style/title_native_ad"
                android:layout_width="wrap_content"
                tools:text="عنوان نمایشی تبلیغ"/>

            <TextView
                android:id="@+id/native_ad_desc"
                style="@style/description_native_ad"
                android:layout_width="wrap_content"/>

        </LinearLayout>

    </com.tapligh.sdk.nativead.TaplighNativeAdView>

</android.support.v7.widget.CardView>
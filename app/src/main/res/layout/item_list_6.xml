<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin8"
    android:layoutDirection="ltr"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/native_ad_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:id="@+id/list_icon"
            android:layout_width="@dimen/image_size_normal"
            android:layout_height="@dimen/image_size_normal"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginEnd="@dimen/margin4"
            android:layout_marginBottom="@dimen/margin8"
            android:contentDescription="Icon"
            tools:src="@drawable/bg_round_green"/>

        <TextView
            android:id="@+id/list_title"
            style="@style/title_native_ad"
            android:layout_alignTop="@+id/list_icon"
            android:layout_marginEnd="@dimen/margin8"
            android:layout_toLeftOf="@+id/list_icon"
            android:layout_toRightOf="@+id/list_action_button"
            android:text="تیر"/>


        <Button
            android:layout_marginStart="@dimen/margin8"
            android:id="@+id/list_action_button"
            style="@style/small_action_button"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/margin2"
            android:layout_width="94dp"
            android:layout_marginBottom="@dimen/margin8"
            android:layout_alignBottom="@+id/list_icon"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_button_round"
            android:text="اکشن"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
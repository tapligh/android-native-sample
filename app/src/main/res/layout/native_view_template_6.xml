<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin8"
    android:layoutDirection="ltr"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <com.tapligh.sdk.nativead.TaplighNativeAdView
        android:id="@+id/native_ad_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <ImageView
            android:id="@+id/native_ad_icon"
            android:layout_width="@dimen/image_size_normal"
            android:layout_height="@dimen/image_size_normal"
            android:layout_alignParentEnd="true"
            android:contentDescription="Icon"
            tools:src="@color/colorAccent"/>

        <TextView
            android:id="@+id/native_ad_title"
            style="@style/title_native_ad"
            android:layout_alignTop="@+id/native_ad_icon"
            android:layout_alignBottom="@+id/native_ad_icon"
            android:layout_marginEnd="@dimen/margin8"
            android:layout_marginRight="@dimen/margin8"
            android:layout_toStartOf="@+id/native_ad_icon"
            android:layout_toLeftOf="@+id/native_ad_icon"/>


        <Button
            android:id="@+id/native_ad_action_button"
            android:layout_marginStart="@dimen/margin8"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            style="@style/small_action_button"/>

    </com.tapligh.sdk.nativead.TaplighNativeAdView>
</android.support.v7.widget.CardView>